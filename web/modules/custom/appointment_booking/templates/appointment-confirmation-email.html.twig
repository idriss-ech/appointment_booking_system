<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; color: #333;">
  <!-- Header -->
  <div style="background-color: #4a6ea9; padding: 20px; text-align: center;">
    <h1 style="color: #ffffff; margin: 0; font-size: 24px;">{{ 'Your Appointment Confirmation'|t }}</h1>
  </div>
  
  <!-- Body Content -->
  <div style="padding: 20px; background-color: #f9f9f9;">
    <p style="font-size: 16px; line-height: 1.5;">{{ 'Dear @name,'|t({'@name': customer_name}) }}</p>
    <p style="font-size: 16px; line-height: 1.5;">{{ 'Thank you for booking your appointment with us. Here are the details:'|t }}</p>
    
    <!-- Details Table -->
    <table style="width: 100%; border-collapse: collapse; margin: 20px 0; background: #fff; border: 1px solid #e0e0e0;">
      <tr>
        <td style="padding: 12px 15px; border-bottom: 1px solid #e0e0e0; font-weight: bold; width: 30%;">{{ 'Agency'|t }}:</td>
        <td style="padding: 12px 15px; border-bottom: 1px solid #e0e0e0;">{{ agency_name }}</td>
      </tr>
      <tr>
        <td style="padding: 12px 15px; border-bottom: 1px solid #e0e0e0; font-weight: bold;">{{ 'Adviser'|t }}:</td>
        <td style="padding: 12px 15px; border-bottom: 1px solid #e0e0e0;">{{ adviser_name }}</td>
      </tr>
      <tr>
        <td style="padding: 12px 15px; font-weight: bold;">{{ 'Date & Time'|t }}:</td>
        <td style="padding: 12px 15px;">{{ date_time }}</td>
      </tr>
    </table>
    
    <!-- Footer Content -->
    <div style="margin-top: 25px; font-size: 15px; line-height: 1.5;">
      <p style="margin-bottom: 15px;">{{ 'If you need to modify or cancel your appointment, please contact us.'|t }}</p>
      
      <p style="margin: 0;">{{ 'Best regards,'|t }}<br>
      <strong style="color: #4a6ea9;">{{ 'The Appointment Team'|t }}</strong></p>
    </div>
  </div>
  
  <!-- Company Footer -->
  <div style="background-color: #e9e9e9; padding: 15px; text-align: center; font-size: 12px; color: #666;">
    <p style="margin: 5px 0;">Â© {{ 'now'|date('Y') }} {{ 'Your Company Name'|t }}</p>
    <p style="margin: 5px 0;">
      <a href="{{ url('<front>') }}" style="color: #4a6ea9; text-decoration: none;">{{ 'Website'|t }}</a> | 
      <a href="mailto:support@example.com" style="color: #4a6ea9; text-decoration: none;">{{ 'Contact Support'|t }}</a>
    </p>
  </div>
</div>