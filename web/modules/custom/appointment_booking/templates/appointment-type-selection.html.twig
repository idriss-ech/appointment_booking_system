<h3 class="step-title">Appointment Type Selection</h3>

{% if terms|length > 0 %}
  <div class="options-container">
    {% for term in terms %}
      <div class="appointment-type-option" data-id="{{ term.id }}">
        <div>
          <img src="https://img.icons8.com/?size=100&id=XvcrKwMkRBlw&format=png&color=000000" width="60px"/>
        </div>
        <div>{{ term.name }}</div>
      </div>
    {% endfor %}
  </div>
{% else %}
<div class="notfound">
     <img src="https://img.icons8.com/?size=100&id=78339&format=png&color=000000" width="80px"/>
  <p>No appointment types found.</p>
  </div>
{% endif %}


 